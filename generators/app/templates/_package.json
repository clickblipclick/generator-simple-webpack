{
  "private": true,
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "webpack-dev-server --hot --port <%= portNumber %> --open",
    "build": "NODE_ENV=production webpack --mode production"<% if (autoPretty) { %>,
    "precommit": "pretty-quick --staged"<% } %>
  },
  "dependencies": {<% if (includeBabel) { %>
    "babel-polyfill": "^6.26.0"<% } %><% if (includeReact && includeBabel) { %>,<% } %><% if (includeReact) { %>
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^4.0.0"<% } %>
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",<% if (includeBabel) { %>
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",<% } %><% if (includeReact && includeBabel) { %>
    "babel-preset-react": "^6.24.1",<% } %>
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.0",<% if (includePrettier) { %>
    "eslint-config-prettier": "^2.9.0",<% } %>
    "eslint-loader": "^2.0.0",<% if (includeReact) { %>
    "eslint-plugin-react": "^7.7.0",<% } %><% if (includePrettier) { %>
    "eslint-plugin-prettier": "^2.6.0",<% } %>
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.0.7",<% if (autoPretty) { %>
    "husky": "^0.14.3",<% } %>
    "postcss-loader": "^2.1.3",<% if (includeSass) { %>
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.7",<% } %><% if (includePrettier) { %>
    "prettier": "^1.11.1",<% } %><% if (autoPretty) { %>
    "pretty-quick": "^1.4.1",<% } %>
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.12",
    "webpack-merge": "^4.1.2",
    "webpack-dev-server": "^3.1.9"
  },<% if (includeBabel) { %>
  "babel": {
    "presets": [["env", {
      "useBuiltIns": true
    }]<% if (includeReact) { %>, "react"<% } %>]<% if (includeReact) { %>,
    "plugins": ["react-hot-loader/babel", "transform-object-rest-spread"]<% } %>
  },<% } %>
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "eslintConfig": {
    "env": {<% if (includeBabel) { %>
      "es6": true,<% } %>
      "node": true,
      "browser": true
    },<% if (includeBabel) { %>
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },<% } %>
    "plugins": [<% if (includePrettier) { %>
      "prettier"<% } %><% if (includePrettier && includeReact) { %>,<% } %><% if (includeReact) { %>
      "react"<% } %>
    ],
    "extends": [
      "eslint:recommended"<% if (includeReact) { %>,
      "plugin:react/recommended"<% } %><% if (includePrettier) { %>,
      "prettier"<% } %><% if (includeReact && includePrettier) { %>,
      "prettier/react"<% } %>
    ],
    "rules": {<% if (includePrettier) { %>
      "prettier/prettier": "warn"
    <% } %>}
  }
}